<h3>メモ新規作成</h3>
    <%= form_tag("/create") do %>
        <div class="form-group">
            <%= label_tag "form-title", "Title" %>
            <%= text_field :memos, :title, id:"form-title", class: "form-control", placeholder:"タイトルを入力"%>
        </div>
        <div class="form-group">
            <%= label_tag "form-content", "Content" %>
            <%= text_area :memos, :body, id:"form-content", class: "form-control", placeholder:"本文を入力"%>
        </div>
        <div class="form-group">
            <%= label_tag "form-category", "Category" %>
            <%= select_tag "memos[category_id]", options_from_collection_for_select(@categories, :id, :name),id:"form-category", class: "form-control" %>
        </div>
        
        <%= submit_tag "create", class:"btn btn-info" %>
    <% end %>

<h1>Memo 編集</h1>
    <%=form_tag("/memos/"+@memo.id.to_s, :method=>:patch) do %>
        <div class ="form-group">
            <%= label_tag "form-title", "Title" %>
            <%= text_field :memos, :title, id:"form-title", class:"form-control",value: @memo.title %>
        </div>
        <div class ="form-group">
            <%= label_tag "form-content", "Content" %>
            <%= text_area :memos, :body, id:"form-content", class:"form-control" ,value: @memo.body%>
        </div>
        <div class="form-group">
            <%= label_tag "form-category", "Category" %>
            <%= select_tag "memos[category_id]", options_from_collection_for_select(@categories, :id, :name, { :selected => @memo.category_id }),id:"form-category", class: "form-control" %>
        </div>
    <%= submit_tag "更新", class:"btn btn-primary" %>
    <% end %>
